@model IEnumerable<MyMusicPlus.Models.Gig>

@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.Datetime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.Datetime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <button class="btn btn-default btn-sm pull-right">Going?</button>
            </div>
        </li>
    }
</ul>